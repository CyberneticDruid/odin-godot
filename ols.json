{
    "$schema": "https://raw.githubusercontent.com/DanielGavin/ols/master/misc/ols.schema.json",
    "collections": [
        {
            "name": "base",
            "path": "C:\\Odin\\base"
        },
        {
            "name": "core",
            "path": "C:\\Odin\\core"
        },
        {
            "name": "shared",
            "path": "C:\\Odin\\shared"
        },
        {
            "name": "vendor",
            "path": "C:\\Odin\\vendor"
        }
    ],
    "enable_document_symbols": true,
    "enable_semantic_tokens": true,
    "enable_hover": true,
    "enable_snippets": true,
    "checker_args": "-vet-extra -strict-style-init-only -no-entry-point"
}
